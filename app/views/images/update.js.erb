<% if @direction -%>
$('#comments').html("<%= escape_javascript(render :partial => 'users/my_comment', :collection => @direction, :as => :img) %>");
<% else -%>
$('#show_comments').html("null");
$('#show_comments').html("<%= escape_javascript(render :partial => 'memories/user_comment', :collection => @memory.comments.order('created_at desc') || 'This memory has no comments') %>");
$('#affect_<%= @image.id %>').effect('highlight', {color: 'orange', mode: 'show'}, 2000);
<% end -%>
