    %a{:href => "/auth/facebook"}
      = image_tag asset_path 'register_big.png', :alt => "Facebook", :title => 'Facebook', :border => 0, :size => "146x28"

    %a.nothanks{:href => "/"}
      No thanks, I'll just browse for now
  
